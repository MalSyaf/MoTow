<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TowerManageActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tower_name"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:text="John Doe"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textAlignment="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pfp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="101dp"/>

    <TextView
        android:id="@+id/change_pfp_btn"
        android:layout_width="161dp"
        android:layout_height="31dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="202dp"
        android:text="Change Profile Picture"
        android:textAlignment="center"
        android:textColor="#5C7CED"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="366dp"
        android:layout_height="2dp"
        android:layout_marginTop="266dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="270dp"
        android:text="      Personal Information"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"/>

    <View
        android:id="@+id/view9"
        android:layout_width="366dp"
        android:layout_height="2dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_info" />

    <TextView
        android:id="@+id/manage_vehicles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/personal_info"
        android:padding="15dp"
        android:text="      Manage Vehicles"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"/>

    <View
        android:layout_width="366dp"
        android:layout_height="2dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manage_vehicles" />

    <TextView
        android:id="@+id/security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/manage_vehicles"
        android:text="      Security"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"/>

    <View
        android:layout_width="366dp"
        android:layout_height="2dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/security" />

    <TextView
        android:id="@+id/activity_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        android:padding="15dp"
        android:text="      Activity Log"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/security" />

    <View
        android:layout_width="366dp"
        android:layout_height="2dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_log" />

    <TextView
        android:id="@+id/delete_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        android:padding="15dp"
        android:text="      Delete Account"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/activity_log" />

    <View
        android:id="@+id/view12"
        android:layout_width="366dp"
        android:layout_height="2dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_account" />

    <TextView
        android:id="@+id/logout_btn"
        android:layout_width="253dp"
        android:layout_height="55dp"
        android:text="Logout"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_account" />

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bottom_nav_base"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="35dp"
            android:padding="8dp"
            android:src="@drawable/main" />

        <ImageView
            android:id="@+id/chat_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/home_btn"
            android:padding="8dp"
            android:src="@drawable/chat" />

        <ImageView
            android:id="@+id/notify_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/chat_btn"
            android:padding="8dp"
            android:src="@drawable/notifications" />

        <ImageView
            android:id="@+id/manage_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/notify_btn"
            android:padding="8dp"
            android:src="@drawable/manage_user" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>