<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="John Doe"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pfp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="155dp" />

        <TextView
            android:id="@+id/change_pfp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/lavender"
            android:textAlignment="center"
            android:text="Change Profile Picture"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line"/>
        <TextView
            android:id="@+id/personal_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/grey"
            android:text="      Personal Information"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line"/>
        <TextView
            android:id="@+id/manage_vehicles"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/grey"
            android:text="      Manage Vehicles"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line"/>
        <TextView
            android:id="@+id/security_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/grey"
            android:text="      Security"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line"/>
        <TextView
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/grey"
            android:text="      Delete Account"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/logout_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:text="Logout"/>

        <RelativeLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="95dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_nav_base">
        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/main"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="35dp"
            android:padding="8dp"/>
        <ImageView
            android:id="@+id/chat_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/chat"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/home_btn"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:id="@+id/notify_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/notifications"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/chat_btn"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:id="@+id/manage_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/manage_user"
            android:padding="8dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/notify_btn"
            android:layout_marginLeft="40dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>