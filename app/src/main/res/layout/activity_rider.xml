<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".rider.RiderActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/request_btn"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navbar"
        android:backgroundTint="@color/purple_200"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="103dp"
        android:padding="8dp"
        android:text="REQUEST ASSISTANCE"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Searching for Assistance"
        android:textSize="13sp"
        android:textStyle="bold"
        android:translationZ="90dp"
        app:layout_constraintBottom_toTopOf="@+id/cancel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_btn"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navbar"
        android:backgroundTint="@color/purple_200"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="103dp"
        android:padding="8dp"
        android:text="CANCEL"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/payment_btn"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navbar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/purple_200"
        android:padding="8dp"
        android:text="MAKE PAYMENT"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Select Vehicle Container -->
    <RelativeLayout
        android:id="@+id/select_vehicle"
        android:layout_width="298dp"
        android:layout_height="397dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/welcome_bar"
        android:elevation="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="114dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Select Vehicle"
            android:textSize="16sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="280dp"
            android:layout_height="265dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_btn"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="19dp"
            android:backgroundTint="@color/purple_200"
            android:padding="8dp"
            android:text="CONFIRM"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="40dp"
            android:visibility="gone"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/no_currentVehicle"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="19dp"
            android:backgroundTint="@color/purple_200"
            android:padding="8dp"
            android:text="REGISTER VEHICLE"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="40dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <!-- Assistance Found Container -->
    <RelativeLayout
        android:id="@+id/tower_container"
        android:layout_width="291dp"
        android:layout_height="397dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/welcome_bar"
        android:elevation="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="114dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Assistance Found!"
            android:textSize="16sp"
            android:textStyle="bold" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/tower_pfp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/default_pfp"/>
        <TextView
            android:id="@+id/tower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="178dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tower_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Type"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tower_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="262dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Vehicle"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tower_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="303dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Plate"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/ok_btn"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="341dp"
            android:backgroundTint="@color/purple_200"
            android:padding="8dp"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="40dp" />
    </RelativeLayout>

    <!-- Welcome Bar -->
    <RelativeLayout
        android:id="@+id/welcome_bar"
        android:layout_width="313dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/welcome_bar"
        android:elevation="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/welcome_pfp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/default_pfp"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="90dp" />
    </RelativeLayout>

    <!-- Tower Bar -->
    <RelativeLayout
        android:id="@+id/tower_bar"
        android:layout_width="291dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/welcome_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="550dp"
        android:visibility="gone">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/tower_bar_pfp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/default_pfp"/>
        <TextView
            android:id="@+id/tower_bar_status"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="90dp" />
    </RelativeLayout>

    <!-- Navbar -->
    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bottom_nav_base"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="290dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/tow_truck" />
        <ImageView
            android:id="@+id/notify_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="17dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/notifications" />
        <ImageView
            android:id="@+id/manage_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="307dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/manage_user" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="250dp"
        android:layout_marginRight="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>