<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="16dp"
    android:backgroundTint="@color/line">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/vehicle_container"
        android:layout_width="245dp"
        android:layout_height="81dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeWidth="1dp"
        app:strokeColor="@color/grey_btn"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/vehicleImage"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:src="@drawable/sportbike"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/plateNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plate:"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/vehicleImage"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand:"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="60dp"
                app:layout_constraintTop_toBottomOf="@id/plateNumber"
                app:layout_constraintStart_toEndOf="@id/vehicleImage"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model:"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="60dp"
                app:layout_constraintTop_toBottomOf="@id/brand"
                app:layout_constraintStart_toEndOf="@id/vehicleImage"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color:"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginRight="60dp"
                app:layout_constraintTop_toBottomOf="@id/model"
                app:layout_constraintStart_toEndOf="@id/vehicleImage"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!--Vehicle Info-->
            <TextView
                android:id="@+id/display_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="15dp"
                android:text="Plate"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/plateNumber"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/display_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="30dp"
                android:text="Brand"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/display_plate"
                app:layout_constraintStart_toEndOf="@id/brand"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/display_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="15dp"
                android:text="Model"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/display_brand"
                app:layout_constraintStart_toEndOf="@id/model"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/display_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="15dp"
                android:text="Color"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/display_model"
                app:layout_constraintStart_toEndOf="@id/color"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>